<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.examcard.mapper.UserMapper">

	<resultMap id="userMap" type="com.examcard.entity.User">
		<result property="sei" column="SEI" />
		<result property="mei" column="MEI" />
		<result property="seiKana" column="SEI_KANA" />
		<result property="maiKana" column="MEI_KANA" />
		<result property="password" column="PASSWORD" />
	</resultMap>

	<select id="selectUser" parameterType="java.lang.String" resultMap="userMap">
		SELECT
			ID,
			SEI,
			MEI,
			SEI_KANA,
			MEI_KANA,
			MAIL
		FROM
			USER
		WHERE
			MAIL = #{mail}
			AND DELETE_FLAG = '0'
	</select>

	<select id="selectUserById" parameterType="java.lang.String" resultMap="userMap">
		SELECT
			U.ID,
			U.SEI,
			U.MEI,
			U.SEI_KANA,
			U.MEI_KANA,
			U.MAIL
		FROM
			USER U
		WHERE
			U.ID = #{id}
			AND U.DELETE_FLAG = '0'
	</select>
</mapper>