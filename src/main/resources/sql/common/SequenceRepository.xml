<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.examcard.repository.common.SequenceRepository">

	<resultMap id="sequenceMap" type="com.examcard.repository.common.Sequence">
		<result property="tableName" column="table_nm" />
		<result property="paddingChar" column="padding_char" />
		<result property="createDate" column="create_date" />
		<result property="createUser" column="create_user" />
		<result property="updateDate" column="update_date" />
		<result property="updateUser" column="update_user" />
		<result property="deleteDate" column="delete_date" />
		<result property="deleteUser" column="delete_user" />
		<result property="deleteFlag" column="delete_flag" />
	</resultMap>

	<select id="selectSequence" parameterType="String" resultMap="sequenceMap">
		select
			table_nm
			,id
			,padding_char
			,length
			,create_date
			,create_user
			,update_date
			,update_user
			,delete_date
			,delete_user
			,delete_flag
		from
			m_sequence
		where
			table_nm = #{tableName}
			and delete_flag = '0'
	</select>
	
	<update id="updateSequence" parameterType="com.examcard.repository.common.Sequence">
		update
			m_sequence
		set
			id = #{id}
			,update_date= #{updateDate}
			,update_user= #{updateUser}
		where
			table_nm = #{tableName}
			and delete_flag = '0'
	</update>
</mapper>